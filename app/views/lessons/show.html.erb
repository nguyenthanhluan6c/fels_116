<% provide title: t("_lesson") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for current_user %>
        <%= current_user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">    
    <h3><%= @lesson.category.name %></h3>  
    <%= form_for [@lesson.category, @lesson], method: :put do |f| %>   
      <ol class="results">
        <%= render @results, form: f %>
      </ol>
      <%= f.hidden_field :status, value: "done_lesson" %>        
      <%= f.submit t("_finish"), class: "btn btn-primary" if @lesson.new_lesson? && @lesson.user == current_user %>
    <% end %>
  </div>
</div>
