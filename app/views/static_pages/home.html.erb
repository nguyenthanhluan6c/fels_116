<% provide title: t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for current_user %>
          <%= current_user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render "shared/stats" %> 
      </section>
    </aside>
    <aside class="col-md-8">
    <%= link_to t("_words"), words_path, class: "btn btn-lg btn-primary" %>
    <%= link_to t("_lessons"), categories_path, class: "btn btn-lg btn-primary" %>

    <h1><%= t "feeds" %></h1>
    <%= will_paginate @feeds %>
    <ul class="activities">
      <%= render @feeds %>
    </ul>
    <%= will_paginate @feeds %> 
    </aside>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome" %></h1>
    <%= link_to t("sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
